@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="text-center mb-4">

    <h2 class="fw-bold mt-2"><i class="bi bi-triangle-fill text-success fs-1 fw-bold"></i>Logoipsum</h2>
</div>
<!-- Login Card -->
<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h4 class="fw-bold text-center mb-2">Reset your password.</h4>
                <p class="text-center text-muted mb-4">Enter your email and set new password.</p>


                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <input asp-for="Input.Token" type="hidden" />
                    <!-- Email -->
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label fw-semibold">Email</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0"><i class="bi bi-envelope text-success"></i></span>
                            <input asp-for="Input.Email" type="email" class="form-control border-start-0 login-input" placeholder="name@example.com">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label fw-semibold">Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0"><i class="bi bi-lock text-success"></i></span>
                            <input asp-for="Input.Password" type="password" class=" password-input form-control border-start-0 login-input" placeholder="Please enter your password.">
                            <span class="input-group-text bg-white toggle-password"><i class="bi bi-eye"></i></span>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold">ConfirmPassword</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0"><i class="bi bi-lock text-success"></i></span>
                            <input asp-for="Input.ConfirmPassword" type="password" class=" password-input form-control border-start-0 login-input" placeholder="Please confirm your password.">
                            <span class="input-group-text bg-white toggle-password"><i class="bi bi-eye"></i></span>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Sign In -->
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-success fw-bold">Reset</button>
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>
