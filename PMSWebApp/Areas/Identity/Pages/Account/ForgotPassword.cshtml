<div class="text-center mb-4">
    <i class="bi bi-triangle-fill text-success fs-1 fw-bold"></i>
    <h2 class="fw-bold mt-2">Logoipsum</h2>
</div>
<!-- Login Card -->
<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h4 class="fw-bold text-center mb-2">Forgot Password?</h4>
                <p class="text-center text-muted mb-4">No worries, we'll send you reset code in email.</p>


                <form  method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <!-- Email -->
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label fw-semibold">Email</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0"><i class="bi bi-envelope text-success"></i></span>
                            <input asp-for="Input.Email" type="email" class="form-control border-start-0 login-input" placeholder="">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-success fw-bold">Send Code</button>
                    </div>

                    <div class="d-grid mt-3">
                        <a type="button" asp-page="./Login" class="btn btn-outline-secondary">Go Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
