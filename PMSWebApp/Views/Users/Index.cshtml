@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer


@{
    ViewData["Title"] = "Index";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="mb-0">Users <span class="badge bg-secondary">24</span></h4>
        <div>
            <button class="btn btn-outline-secondary"><i class="bi bi-funnel filter-icon"></i>Filter</button>
            @if (User.HasPermission("User.Create"))
            {
                <button class="btn btn-success">@Localizer["NewUser"]</button>
            }
            
        </div>
    </div>
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <div class="col-12 col-md-6">
            <div class="input-group">
                <span class="input-group-text bg-white border-end-0 rounded-pill">
                    <input type="text"
                           class="no-border-on-focus form-control "
                           placeholder="Search..."
                           style="border: none;" />

                    <i class="bi bi-search"></i>
                </span>
            </div>
        </div>

        <div class="d-flex align-items-center gap-2">
            <div class="btn-group" role="group">
                <button class="btn btn-outline-secondary active"><i class="bi bi-grid-3x3-gap-fill"></i> Grid</button>
                <button class="btn btn-outline-secondary"><i class="bi bi-list-ul"></i> List</button>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- User Card Start -->
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div class="d-flex align-items-center">
                            <div class="me-2">
                                <img src=""
                                     class="rounded-circle d-none"
                                     alt="User" width="40" height="40"
                                     onerror="showIconFallback(this)">
                                <i class="bi bi-person-circle user-icon"></i>

                            </div>
                            <div>
                                <h6 class="mb-0">Khalid Mansoor</h6>
                                <small class="text-muted">Project Manager</small>
                            </div>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-sm" data-bs-toggle="dropdown">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#">View</a></li>
                                <li><a class="dropdown-item" href="#">Edit</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="#">Delete</a></li>
                            </ul>
                        </div>
                    </div>
                    <hr />
                    <p class="mb-1"><i class="bi bi-person-circle"></i> Role: Projct Manager</p>
                    <p class="mb-1"><i class="bi bi-envelope me-1"></i> khalid@dubaimobility.gov.sa</p>
                    <p class="mb-0"><i class="bi bi-telephone me-1"></i> +966-50-9988776</p>
                </div>
            </div>
        </div>
        <!-- User Card End -->
        <!-- Repeat user cards below as needed -->
    </div>
</div>

