@model PMSWebApp.Models.RoleViewModel
@{
    var roleAction = Model.Role.Id != null ? "Edit Role" : "Create Role";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card shadow-sm">
            <div class="card-header">
                <h6>@roleAction</h6>
            </div>
            <div class="card-body p-4">
                <form id="createRoleForm">
                    <input type="hidden" asp-for="Role.Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label asp-for="Role.Name" class="form-label fw-semibold"></label>
                                <div class="input-group">

                                    <input asp-for="Role.Name" type="text" class="no-shadow-on-focus  form-control  " placeholder="">


                                </div>
                                <span asp-validation-for="Role.Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label asp-for="Role.Description" class="form-label fw-semibold"></label>
                                <div class="input-group">

                                    <input asp-for="Role.Description" type="text" class="no-shadow-on-focus  form-control " placeholder="">


                                </div>
                                <span asp-validation-for="Role.Description" class="text-danger"></span>
                            </div>
                        </div>
                        
                       
                        
                    </div>


                    <div class="row">
                        <div class="text-end mt-3">
                            <button type="button" onclick="closeRoleModal()" class="btn btn-outline-secondary me-2">Cancel</button>
                            <button type="submit" class="btn btn-success fw-bold">Save</button>
                        </div>

                    </div>





                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
  
}

