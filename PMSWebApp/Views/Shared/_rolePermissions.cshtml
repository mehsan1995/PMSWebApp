@model RolePermissionViewModel

@{
    var actions = new[] { "View", "Create", "Modify", "Delete", "Approve" };
}

<div class="modal-header">
    <h5 class="modal-title mb-0">@Model.RoleName</h5>
   
</div>



<form id="permissionForm" method="post">
    <input type="hidden" asp-for="RoleId" />
    <div class="table-responsive">
        <table class="table table-bordered text-center">
            <thead class="table-light">
                <tr>
                    <th class="form-check-input">
                        <input type="checkbox" id="selectAllModules" />
                        Name
                    </th>
                    @foreach (var action in actions)
                    {
                        <th>@action</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var module in Model.PermissionModules)
                {
                    <tr>
                        <td class="fw-bold">@module.Name</td>

                        @foreach (var action in actions)
                        {
                            var permission = module.Permissions.FirstOrDefault(p => p.Name == action);

                            <td>
                                @if (permission != null)
                                {
                                    <input type="checkbox"
                                           name="SelectedPermissionIds"
                                           value="@permission.Id"
                                           class="form-check-input"
                                           @(permission.IsChecked ? "checked" : "") />
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                        }
                    </tr>
                }

            </tbody>
        </table>
    </div>
    
    <div class="modal-footer">
        <button type="button" class="btn btn-light" data-bs-dismiss="modal" aria-label="Close">Cancel</button>
        @if (!(Model.IsView ?? false))
        {
            <button type="submit" class="btn btn-success">Save</button>
            
        }
        
    </div>
</form>
