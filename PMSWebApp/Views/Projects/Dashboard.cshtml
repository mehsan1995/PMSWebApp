
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <div class="row align-items-center m-3">
        <div class="col-md-1">
            <button type="button" onclick="history.back()" class="btn btn-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i>
            </button>
        </div>
        <div class="col-md-5 mb-2 mb-md-0">
            <h4 class="mb-0">
                Projects
            </h4>
        </div>
        <div class="col-md-6 d-flex justify-content-md-end justify-content-start gap-2 flex-wrap">

            
            <a asp-action="Calander" class="btn btn-outline-secondary pms-hover"><i class="bi bi-calendar user-icon"></i> Calander</a>
            <a asp-action="DeletedProjects" class="btn btn-outline-secondary pms-hover">Deleted Projects</a>
            <a asp-action="AddEdit" class="btn btn-success">+ New Project</a>

        </div>
    </div>
    <div class="row align-items-center m-3">
        <div class="col-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Projects</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                    <p class="card-text">content.</p>
                    <a href="#" class="card-link">Card link</a>
                    <a href="#" class="card-link">Another link</a>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Budget Utilization</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                    <p class="card-text">content.</p>
                    <a href="#" class="card-link">Card link</a>
                    <a href="#" class="card-link">Another link</a>
                </div>
            </div>
        </div>
        <div class="col-3">

            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Resources Used</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                    <p class="card-text">content.</p>
                    <a href="#" class="card-link">Card link</a>
                    <a href="#" class="card-link">Another link</a>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Tasks</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                    <p class="card-text">content.</p>
                    <a href="#" class="card-link">Card link</a>
                    <a href="#" class="card-link">Another link</a>
                </div>
            </div>
        </div>

       
        
    </div>
    <div class="card">
        <div class="card-header">
            <div class="row g-2 align-items-center">

                <!-- Search -->
                <div class="col-12 col-md-auto flex-grow-1">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0 rounded-pill">
                            <input id="searchProject" type="text"
                                   class="no-border-on-focus form-control"
                                   placeholder="Search..." style="border: none;">
                            <i class="bi bi-search"></i>
                        </span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="col-12 col-md-auto">
                    <div class="d-flex flex-wrap justify-content-md-end gap-2">
                        <button class="pms-hover btn btn-outline-secondary text-success">
                            <i class="bi bi-funnel filter-icon"></i> Filter
                        </button>
                        <ul class="nav nav-pills mb-0" id="projectTab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="pms-hover btn btn-outline-secondary me-2 active" id="grid-tab"
                                        data-bs-toggle="tab" data-bs-target="#projectgridView"
                                        type="button" role="tab" aria-controls="projectgridView" aria-selected="true">
                                    <i class="bi bi-grid-3x3-gap-fill"></i> Grid
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class=" pms-hover btn btn-outline-secondary" id="list-tab"
                                        data-bs-toggle="tab" data-bs-target="#projectlistView"
                                        type="button" role="tab" aria-controls="projectlistView" aria-selected="false">
                                    <i class="bi bi-list-ul"></i> List
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>


        <div class="card-body p-0">
            <div class="tab-content mt-3">
                <div class="tab-pane fade show active" id="projectgridView" role="tabpanel" aria-labelledby="grid-tab">
                    <div class="row d-flex flex-wrap align-items-stretch">
                        <div id="gridContainer" class="row m-1"></div>
                        <div id="gridPagination" class="m-3"></div>

                    </div>
                </div>
                <div class="tab-pane fade" id="projectlistView" role="tabpanel" aria-labelledby="list-tab">
                    <partial name="_projectsList" />
                </div>
            </div>
        </div>
    </div>
</div>


