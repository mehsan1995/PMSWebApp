@model SettingsViewModel
@{
    ViewData["Title"] = "SystemsSetting";
}

<div class="container py-4">
    <form>
        <section class="mb-5">
            <h2 class="h5 fw-semibold mb-4">General Information</h2>

            <div class="row mb-3 align-items-center">
                <div class="col-auto">
                    <img src="" alt="Organization Logo" class="rounded-circle border p-1" style="width: 60px; height: 60px; background: #fff;" />
                </div>
                <div class="col">
                    <div class="h5 mb-0">InfraSync Group</div>
                    <div class="text-secondary small">Organization</div>
                </div>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label for="languageSelect" class="form-label small text-secondary">Language</label>
                    <select class="form-select" id="languageSelect" aria-label="Language select">
                        <option selected>English 🇬🇧</option>
                        <option>Arabic 🇸🇦</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="timezoneSelect" class="form-label small text-secondary">Timezone</label>
                    <select class="form-select" id="timezoneSelect" aria-label="Timezone select">
                        <option selected>GMT+3 (Riyadh)</option>
                        <option>GMT+2 (Cairo)</option>
                        <option>GMT+0 (UTC)</option>
                        <option>GMT-5 (New York)</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="currencySelect" class="form-label small text-secondary">Currency</label>
                    <select class="form-select" id="currencySelect" aria-label="Currency select">
                        <option selected>SAR (Saudi Riyal)</option>
                        <option>USD (US Dollar)</option>
                        <option>EUR (Euro)</option>
                        <option>GBP (British Pound)</option>
                    </select>
                </div>
            </div>
        </section>

        <section>
            <h2 class="h5 fw-semibold mb-4">Notification Preference</h2>

            <div class="mb-4 d-flex justify-content-between align-items-center">
                <div>
                    <div class="fw-semibold">Enable Desktop Notification</div>
                    <div class="small text-secondary">
                        Receive notifications all of the projects, tasks, system, mentions, documents, etc
                    </div>
                </div>
                <div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="desktopNotificationToggle" checked />
                    </div>
                </div>
            </div>

            <div class="mb-4 d-flex justify-content-between align-items-center">
                <div>
                    <div class="fw-semibold">Project &amp; Task Updates</div>
                    <div class="small text-secondary">
                        Receive email updates when tasks are assigned, due, completed, or commented on.
                    </div>
                </div>
                <div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="projectTaskToggle" checked />
                    </div>
                </div>
            </div>

            <div class="mb-4 d-flex justify-content-between align-items-center">
                <div>
                    <div class="fw-semibold">Approval &amp; Change Requests</div>
                    <div class="small text-secondary">
                        Get notified by email when a request is raised, approved, or rejected.
                    </div>
                </div>
                <div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="approvalChangeToggle" />
                    </div>
                </div>
            </div>

            <div class="mb-4 d-flex justify-content-between align-items-center">
                <div>
                    <div class="fw-semibold">System Announcements &amp; Tips</div>
                    <div class="small text-secondary">
                        Receive news about system upgrades, feature releases, best practices and system-wide messages.
                    </div>
                </div>
                <div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="systemAnnouncementsToggle" />
                    </div>
                </div>
            </div>
        </section>


    </form>

</div>

