@model SettingsViewModel
@{
    ViewData["Title"] = "SystemsSetting";
}

<div class="container py-4">
    <form method="post">
        <input type="hidden" asp-for="Settings.Id" />
        <input type="hidden" asp-for="Settings.UserId" />
        <section class="mb-5">
            <h2 class="h5 fw-semibold mb-4">General Information</h2>

            <div class="row mb-3 align-items-center">
                <div class="col-auto">
                    <img src="" alt="Organization Logo" class="rounded-circle border p-1" style="width: 60px; height: 60px; background: #fff;" />
                </div>
                <div class="col">
                    <div class="h5 mb-0">InfraSync Group</div>
                    <div class="text-secondary small">Organization</div>
                </div>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label for="languageSelect" class="form-label small text-secondary">Language</label>
                    <select asp-for="Settings.Language" class="form-select">
                        <option data-content='<img src="https://flagcdn.com/gb.svg" width="20" class="me-2" /> English' value="en-US" selected>English</option>
                        <option data-content='<img src="https://flagcdn.com/sa.svg" width="20" class="me-2" /> العربية' value="ar-SA">العربية</option>
                    </select>

                </div>
                <div class="col-md-6">
                    <label for="timezoneSelect" class="form-label small text-secondary">Timezone</label>
                    <select asp-for="Settings.Timezone" class="form-select" id="timezoneSelect" aria-label="Timezone select">
                        <option selected>GMT+3 (Riyadh)</option>
                        <option>GMT+2 (Cairo)</option>
                        <option>GMT+0 (UTC)</option>
                        <option>GMT-5 (New York)</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="currencySelect" class="form-label small text-secondary">Currency</label>
                    <select asp-for="Settings.Currency" class="form-select" id="currencySelect" aria-label="Currency select">
                        <option selected>SAR (Saudi Riyal)</option>
                        <option>USD (US Dollar)</option>
                        <option>EUR (Euro)</option>
                        <option>GBP (British Pound)</option>
                    </select>
                </div>
            </div>
        </section>

        <section>
            <h2 class="h5 fw-semibold mb-4">Notification Preference</h2>

            <div class="mb-4 d-flex justify-content-between align-items-center">
                <div>
                    <div class="fw-semibold">Enable Desktop Notification</div>
                    <div class="small text-secondary">
                        Receive notifications all of the projects, tasks, system, mentions, documents, etc
                    </div>
                </div>
                <div>
                    <div class="form-check form-switch">
                        <input asp-for="Settings.EnableDesktopNotification" class="form-check-input form-check-input-success" type="checkbox" id="desktopNotificationToggle" />
                    </div>
                </div>
            </div>

            <div class="mb-4 d-flex justify-content-between align-items-center">
                <div>
                    <div class="fw-semibold">Project &amp; Task Updates</div>
                    <div class="small text-secondary">
                        Receive email updates when tasks are assigned, due, completed, or commented on.
                    </div>
                </div>
                <div>
                    <div class="form-check form-switch">
                        <input asp-for="Settings.ProjectTaskUpdates" class="form-check-input form-check-input-success" type="checkbox" id="projectTaskToggle" />
                    </div>
                </div>
            </div>

            <div class="mb-4 d-flex justify-content-between align-items-center">
                <div>
                    <div class="fw-semibold">Approval &amp; Change Requests</div>
                    <div class="small text-secondary">
                        Get notified by email when a request is raised, approved, or rejected.
                    </div>
                </div>
                <div>
                    <div class="form-check form-switch">
                        <input asp-for="Settings.ApprovalChangeRequests" class="form-check-input form-check-input-success" type="checkbox" id="approvalChangeToggle" />
                    </div>
                </div>
            </div>

            <div class="mb-4 d-flex justify-content-between align-items-center">
                <div>
                    <div class="fw-semibold">System Announcements &amp; Tips</div>
                    <div class="small text-secondary">
                        Receive news about system upgrades, feature releases, best practices and system-wide messages.
                    </div>
                </div>
                <div>
                    <div class="form-check form-switch">
                        <input asp-for="Settings.SystemAnnouncements" class="form-check-input form-check-input-success" type="checkbox" id="systemAnnouncementsToggle" />
                    </div>
                </div>
            </div>
        </section>
        <div class="row">
            <div class="text-end mt-3">
                <a href="#" onclick="history.back(); return false;" class="btn btn-outline-secondary me-2">Cancel</a>
                <button type="submit" class="btn btn-success fw-bold">Save</button>
            </div>

        </div>

    </form>

</div>

