@model DepartmentUsersViewModel
<a href="javascript:void(0)" onclick="AddUserDepartment(@Model.DepartmentId)" class="btn btn-success m-3">+ Add User</a>
<table id="departmentUsersTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Users.Count() == 0)
        {
            <tr>
                <td colspan="2" class="text-center">No users found in this department.</td>
            </tr>
        }
        else
        {
            foreach (var user in Model.Users)
            {
                <tr>
                    <td>@(user.UserName)
                        <span class="badge bg-primary ms-2">@( user.IsManager ? user.Managertitle:"")</span>
                    </td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Actions
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item text-danger" href="javascript:void(0)" onclick="deleteUser(@user.Id,@user.DepartmentId)">Delete</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="javascript:void(0)" onclick="assignManager('@user.UserId',@user.DepartmentId)">Select Manager</a>
                                </li>
                            </ul>
                        </div>
                    </td>

                </tr>
            }
        }

    </tbody>
</table>
